<div class="container">
  <div class="row">
    <div class="col-lg-9">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </div>
      <div class="col-lg-3">
        <h4 class="my-4">Categories</h4>
        <div class="list-group">
          <% Category.all.each do |category| %>
            <%= link_to category.name, admin_root_path(category: category.id), class: "list-group-item" %>
          <% end %>
        </div>

        <h4 class="my-4">Brands</h4>
        <div class="list-group">
          <% Brand.all.each do |brand| %>
            <%= link_to brand.name, admin_root_path(brand: brand.id), class: "list-group-item" %>
          <% end %>
        </div>
      </div>
  </div>
</div>