<div class="d-flex justify-content-between align-items-center mb-3">
  <h2 style="color: white;">Orders</h2>
</div>

<table class="table">
  <thead class="thead">
  <tr>
    <th scope="col" style="color: white;">Id</th>
    <th scope="col" style="color: white;">User</th>
    <th scope="col" style="color: white;">State</th>
    <th scope="col" style="color: white;">Created_at</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @orders.each do |order| %>
    <tr>
      <th scope="row" class="product-name" style="color: white;"><%= order.id %></th>
      <td style="color: white;"><%= order.user.email %></td>
      <td style="color: white;"><%= order.state %></td>
      <td style="color: white;"><%= order.created_at %></td>
      <td>
        <!-- Przyciski z takimi samymi klasami jak w sekcji kategorii -->
        <button type="button" class="btn btn-outline-secondary btn-sm me-2" id="edit-order-<%= order.id %>-button">Edytuj</button>
        <button type="button" class="btn btn-outline-danger btn-sm" id="delete-order-<%= order.id %>-button">Usu≈Ñ</button>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
