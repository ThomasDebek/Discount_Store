<%= form_with(model: [:admin, @product], local: true, class: "styled-form my-4") do |f| %>
  <% if @product.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% @product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "form-label text-white" %>
    <%= f.text_field :name, class: "form-control rounded-0 bg-dark text-white" %>
  </div>

  <div class="form-group">
    <%= f.label :price, class: "form-label text-white" %>
    <%= f.text_field :price, class: "form-control rounded-0 bg-dark text-white", placeholder: "Enter price in USD" %>
  </div>

  <div class="form-group">
    <%= f.label :image, class: "form-label text-white" %>
    <%= f.file_field :image, class: "form-control-file border-0 bg-success text-white" %>
  </div>

  <div class="form-group">
    <%= f.label :brand_id, class: "form-label text-white" %>
    <%= f.collection_select(:brand_id, Brand.all, :id, :name, { include_blank: true }, class: "form-control rounded-0 bg-dark text-white") %>
  </div>

  <div class="form-group">
    <%= f.label :category_id, class: "form-label text-white" %>
    <%= f.collection_select(:category_id, Category.all, :id, :name, { include_blank: true }, class: "form-control rounded-0 bg-dark text-white") %>
  </div>

  <div class="text-center">
    <%= f.submit "Create Product", class: "btn btn-success rounded-pill" %>
  </div>
<% end %>
