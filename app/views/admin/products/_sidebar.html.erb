<div class="container-fluid bg-dark">
  <div class="row">
    <div class="col-lg-3 order-lg-last">
      <nav class="nav flex-column">
        <h4 class="my-4 text-light">Categories</h4>
        <% Category.all.each do |category| %>
          <%= link_to category.name, admin_root_path(category: category.id), class: "nav-link text-light" %>
        <% end %>
      </nav>

      <nav class="nav flex-column">
        <h4 class="my-4 text-light">Brands</h4>
        <% Brand.all.each do |brand| %>
          <%= link_to brand.name, admin_root_path(brand: brand.id), class: "nav-link text-light" %>
        <% end %>
      </nav>
    </div>
    <div class="col-lg-9 order-lg-first">
      <p class="notice text-light"><%= notice %></p>
      <p class="alert text-light"><%= alert %></p>
      <%= yield %>
    </div>
  </div>
</div>
