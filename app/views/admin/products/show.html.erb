<!-- app/views/products/show.html.erb -->

<%= image_tag @product.image, class: "card-img-top", alt: @product.name if @product.image.attached? %>

<div class="card-body d-flex justify-content-between align-items-center">
  <div>
    <h1 class="display-4"><%= @presenter.full_title %></h1>
    <p class="lead">$<%= @product.price %></p>
    <% if @product.user.present? %>
      <p> <%= @product.user.email %></p>
    <% end %>
  </div>
  <div class="btn-group">
    <% if admin_signed_in? %>
      <%= link_to 'Edit', edit_admin_product_path(@product), class: 'btn btn-warning btn-sm mr-2' %>
      <%= button_to "Delete", admin_product_path(@product), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm mr-2' %>
      <%= link_to 'Back', admin_root_path, class: 'btn btn-secondary btn-sm' %>
    <% end  %>
  </div>
</div>
