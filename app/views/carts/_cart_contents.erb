<!-- _cart_contents.html.erb -->
<div class="row">
  <div class="col-md-9">
    <table class="table table-hover">
      <thead class="thead">
      <tr>
        <th></th>
        <th scope="col" style="color: white;">Product</th>
        <th scope="col" style="color: white;">Price</th>
      </tr>
      </thead>
      <tbody>
      <% if @cart.empty? %>
        <tr>
          <td colspan="3" class="text-center" style="color: white;">
            YOUR CART IS EMPTY
          </td>
        </tr>
      <% else %>
        <% @cart.cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= image_tag(cart_item.product.main_image_path, class: 'card-img-top', style: "width: 140px; height: 80px;") %>
            </td>
            <td class="product-name" style="color: white;">
              <%= cart_item.product.name %>
            </td>
            <td style="color: white;">
              <%= cart_item.product.price %>
            </td>
          </tr>
        <% end %>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-3">
    <div>
      <h3>Total: $<%= @cart.total %></h3>
    </div>
    <div>
      <%= button_to "Empty cart", cart_path(@cart), method: :delete, data: { confirm: "Do you really want to empty the cart?" },
                    class: "btn btn-block btn-outline-danger" %>
      <%= button_to 'Checkout', orders_path, method: :post, class: "btn btn-block  btn-outline-success" %>


    </div>
    <div>
    </div>
  </div>
</div>
