<%= form_for ([@product, @comment]) do |form| %>
  <div class="form-group">
    <%= form.number_field :rating, in: 1..5, class: 'form-control', placeholder: 'Ocena (1-5)', required: true %>
  </div>

  <div class="form-group">
    <%= form.text_area :body, class: 'form-control', placeholder: 'Napisz komentarz...', rows: 3, required: true %>
  </div>

  <div class="form-group text-right">
    <%= form.submit  %>
  </div>
<% end %>


