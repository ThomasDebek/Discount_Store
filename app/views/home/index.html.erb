<!-- app/views/home/index.html.erb -->
<style>
    .card-img-top {
        object-fit: cover;
        height: 200px; /* Ustaw żądany rozmiar obrazu */
    }
</style>

<div class="container mt-4">
  <h1 class="display-4">Welcome to the Discount Store!</h1>

  <% if user_signed_in? %>
    <%= link_to 'New Product', new_product_path, class: 'btn btn-primary my-2' %>
  <% end %>

  <h2 class="mt-4">Products</h2>
  <div class="row row-cols-1 row-cols-md-3 g-4 align-items-stretch">
    <% @products.each do |product| %>
      <div class="col">
        <div class="card h-100">
          <%= link_to (image_tag product.image, class: "card-img-top", alt: product.name if product.image.attached?), product %>
          <div class="card-body">
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text">$<%= product.price %></p>
            <% if product.user.present? %>
              <p class="card-text">User: <%= product.user.email %></p>
            <% end %>
            <div class="d-flex justify-content-between align-items-center">
              <% if user_signed_in? && current_user == product.user %>
                <span class="d-flex">
                  <%= link_to 'Edit', edit_product_path(product), class: 'btn btn-warning btn-sm mr-2' %>
                  <%= button_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm mr-2' %>
                </span>
              <% end %>
              <%= link_to 'Show', product_path(product), class: 'btn btn-primary btn-sm' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <div class="pagination">
      <%= will_paginate @products, :page_links => false %>
    </div>

  </div>
</div>
