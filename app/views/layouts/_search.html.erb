<!-- app/views/layouts/_search.html.erb -->

<li class="nav-item">
  <%= form_with url: search_products_path, method: :get, local: true, class: "form-inline nav-search" do |f| %>
    <div class="input-group">
      <%= f.text_field :q, value: params[:q], require: true, class: "form-control" %>
      <div class="input-group-append">
        <%= f.submit "Search", class: 'btn btn-success' %>
      </div>
    </div>
  <% end %>
</li>
