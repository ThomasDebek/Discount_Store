<style>
    .custom-sidebar {
        background-color: #2c3e50;
        color: #ecf0f1;
        padding: 20px;
        border-radius: 10px;
    }

    .nav-link {
        color: #ecf0f1;
        text-decoration: none;
        display: flex;
        align-items: center;
        padding: 10px;
        margin-bottom: 10px;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

    .nav-link:hover {
        background-color: #34495e;
    }

    .nav-icon {
        margin-right: 10px;
        font-size: 20px;
    }

    .nav-header {
        font-size: 1.2em;
        margin-bottom: 15px;
    }

    .sidebar-divider {
        border-top: 1px solid #ecf0f1;
        margin: 15px 0;
    }

    .sidebar-footer {
        font-size: 0.8em;
        margin-top: 15px;
    }

    .cta-button {
        background-color: #3498db;
        color: #ecf0f1;
        text-decoration: none;
        padding: 10px;
        border-radius: 5px;
        display: block;
        text-align: center;
        margin-top: 15px;
    }

    .cta-button:hover {
        background-color: #2980b9;
    }
</style>

<div class="custom-sidebar">
  <div class="nav-header">Explore</div>
  <% Category.all.each do |category|%>
    <%= link_to root_path(category: category.id), class: "nav-link" do %>
      <i class="fa fa-th-large nav-icon"></i>
      <%= category.name %>
    <% end %>
  <% end %>

  <div class="sidebar-divider"></div>

  <div class="nav-header">Discover</div>
  <% Brand.all.each do |brand|%>
    <%= link_to root_path(brand: brand.id), class: "nav-link" do %>
      <i class="fa fa-building nav-icon"></i>
      <%= brand.name %>
    <% end %>
  <% end %>

  <div class="sidebar-divider"></div>

  <div class="nav-header">Latest Products</div>
  <% Product.last(5).each do |product| %>
    <%= link_to product, class: "nav-link" do %>
      <i class="fa fa-star nav-icon"></i>
      <%= product.name %>
    <% end %>
  <% end %>

  <div class="sidebar-divider"></div>

  <div class="cta-button">
    <i class="fa fa-shopping-cart nav-icon"></i>
    Shop Now
  </div>

  <div class="sidebar-divider"></div>

  <div class="sidebar-footer">
    <p>Thank you for exploring!</p>
    <p>Contact us: <i class="fa fa-envelope nav-icon"></i> info@example.com</p>
  </div>
</div>
