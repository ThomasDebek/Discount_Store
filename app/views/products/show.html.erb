<!-- app/views/products/show.html.erb -->
<br class="container mt-4">
  <br class="card">

    <%= image_tag @product.image, class: "card-img-top", alt: @product.name if @product.image.attached? %>
    <div class="card-body">
      <h1 class="display-4"><%= @product.name %></h1>
      <p class="lead">$<%= @product.price %></p>
      <% if @product.user.present? %>
        <p> <%= @product.user.email %></p>
      <% end %>
      <% if user_signed_in? && current_user == @product.user %>

        <div class="d-flex justify-content-between align-items-center">
           <span class="d-flex">
          <%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-warning btn-sm mr-2' %>
          <%= button_to 'Destroy', @product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm mr-2' %>
          </span>
             <%= link_to 'Back', root_path, class: 'btn btn-secondary btn-sm ml-auto' %>
        </div>
        <% else %>
        <%= link_to 'Back', root_path, class: 'btn btn-secondary btn-sm ml-auto' %>

      <% end %>
    </div>
  </br>

  <%= render "comments/form" %> </br>
  <%= render "comments/comment" %>


  </div>
</div>

